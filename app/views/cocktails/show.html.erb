<h1><%= @cocktail.name %></h1>
<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>
<ul>
  <% @doses.each do |dose| %>
  <li> <%= dose.description %>/<%= dose.ingredient.name %></li>
  <% end %>
</ul>
<h2><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></h2>
<h2><%= link_to "Accueil", cocktails_path %></h2>
